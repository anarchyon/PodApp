<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/start">
        <Constraint android:id="@+id/upper_card">
            <Layout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp" />
        </Constraint>

        <Constraint android:id="@+id/bottom_card">
            <Layout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp" />
            <Transform
                android:scaleX="0.9"
                android:scaleY="0.9" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/swipe_right">
        <Constraint android:id="@id/upper_card"
            android:rotation="-15"
            android:rotationY="15">
            <Layout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="80dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.6"/>
        </Constraint>
    </ConstraintSet>

    <Transition
        app:constraintSetEnd="@id/swipe_right"
        app:constraintSetStart="@+id/start"
        app:duration="500">
        <OnSwipe
            app:touchAnchorId="@id/upper_card"
            app:touchRegionId="@id/upper_card"
            app:touchAnchorSide="right"
            app:dragDirection="dragRight"
            app:onTouchUp="autoCompleteToStart" />
    </Transition>
</MotionScene>
